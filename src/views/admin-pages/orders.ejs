            <main class="main-wrap">

                <%- include('./partials/header/header.ejs') %>

                    <section class="content-main">
                        <div class="content-header">
                            <div>
                                <h2 class="content-title card-title">Order List </h2>
                                <p>Lorem ipsum dolor sit amet.</p>
                            </div>
                            <div>
                                <input type="text" placeholder="Search order ID" class="form-control bg-white">
                            </div>
                        </div>
                        <div class="card mb-4">
                            <header class="card-header">
                                <div class="row gx-3">
                                    <div class="col-lg-4 col-md-6 me-auto">
                                        <input type="text" placeholder="Search..." class="form-control">
                                    </div>
                                    <div class="col-lg-2 col-6 col-md-3">
                                        <select class="form-select">
                                            <option>Status</option>
                                            <option>Active</option>
                                            <option>Disabled</option>
                                            <option>Show all</option>
                                        </select>
                                    </div>
                                    <div class="col-lg-2 col-6 col-md-3">
                                        <select class="form-select">
                                            <option>Show 20</option>
                                            <option>Show 30</option>
                                            <option>Show 40</option>
                                        </select>
                                    </div>
                                </div>
                            </header> <!-- card-header end// -->
                            <div class="card-body">
                                <div class="table-responsive">
                                    <table class="table table-hover">
                                        <thead>
                                            <tr>
                                                <th>#ID</th>
                                                <th scope="col">Name</th>
                                                <th scope="col">Email</th>
                                                <th scope="col">Total</th>
                                                <th scope="col">Status</th>
                                                <th scope="col">Date</th>
                                                <th scope="col" class="text-end"> Action </th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% if (orders.length>0) { %>
                                             
                                         <% for( let i = 0; i < orders.length; i++ ) { %>
                                         
                                         
                                            <tr>
                                                <td>0901</td>
                                                <td><b><%= orders[i].userId.fullName %> </b></td>
                                                <td><template class="__cf_email__"
                                                        data-cfemail="aec3cfdcd8c7c0eecbd6cfc3dec2cb80cdc1c3"><%= orders[i].userId.email %> </template>
                                                </td>
                                                <td>Rs <%= orders[i].totalPrice %> </td>
                                                <td><span class="badge rounded-pill alert-warning"><%= orders[i].productStatus %> </span></td>
                                                <td><%= orders[i].createdAt %> </td>
                                                <td class="text-end">
                                                    <a href="#" class="btn btn-md rounded font-sm">Detail</a>
                                                    <div class="dropdown">
                                                        <a href="#" data-bs-toggle="dropdown"
                                                            class="btn btn-light rounded btn-sm font-sm"> <i
                                                                class="material-icons md-more_horiz"></i> </a>
                                                        <div class="dropdown-menu">
                                                            <a class="dropdown-item" href="#">View detail</a>
                                                            <a class="dropdown-item" href="#">Edit info</a>
                                                            <a class="dropdown-item text-danger" href="#">Delete</a>
                                                        </div>
                                                    </div> <!-- dropdown //end -->
                                                </td>
                                            </tr>
                                            <% } %>
                                            <% }else{ %>
                                                <h4>No order placed ye</h4>
                                                <% } %> 
                                        </tbody>
                                    </table>
                                </div> <!-- table-responsive //end -->
                            </div> <!-- card-body end// -->
                        </div> <!-- card end// -->
