        <main class="main-wrap">

            <%- include('./partials/header/header.ejs') %>

                <section class="content-main">
                    <div class="content-header">
                        <h2 class="content-title">Users list</h2>
                        <div>Sellers
                            <a href="#" class="btn btn-primary">
                                <i class="material-icons md-plus"></i>
                                Create new</a>
                        </div>
                    </div>
                    <div class="card mb-4">
                        <header class="card-header">
                            <div class="row gx-3">
                                <div class="col-lg-4 col-md-6 me-auto">
                                    <input type="text" placeholder="Search..." class="form-control">
                                </div>
                                <div class="col-lg-2 col-md-3 col-6">
                                    <select class="form-select">
                                        <option>Status</option>
                                        <option>Active</option>
                                        <option>Disabled</option>
                                        <option>Show all</option>
                                    </select>
                                </div>
                                <div class="col-lg-2 col-md-3 col-6">
                                    <select class="form-select">
                                        <option>Show 20</option>
                                        <option>Show 30</option>
                                        <option>Show 40</option>
                                    </select>
                                </div>
                            </div>
                        </header>
                        <!-- card-header end// -->
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-hover">
                                    <thead>
                                        <tr>
                                            <th>Users Name</th>
                                            <th>Email</th>
                                            <th>Status</th>
                                            <th>Registered</th>
                                            <th class="text-end px-4">
                                                Action
                                            </th>
                                        </tr>
                                    </thead>
                                    <tbody>


                                        <% if(userList){ for(let i=0 ; i< userList.length ;i++){ %>
                                            <tr>
                                                <td width="20%">

                                                    <div class="info pl-3">
                                                        <h6 class="mb-0 title">
                                                            <%= userList[i].fullName%>
                                                        </h6>
                                                        <small class="text-muted"></small>
                                                    </div>

                                                </td>
                                                <td>
                                                    <h5>
                                                        <%= userList[i].email%>
                                                    </h5>
                                                </td>
                                                <td>
                                                    <% if (userList[i].accountStatus==='ACTIVE' ) { %>

                                                        <span class="badge rounded-pill alert-success w-60 h-20">
                                                            <%= userList[i].accountStatus %>
                                                                <% }else{ %>
                                                                    <span
                                                                        class="badge rounded-pill alert-danger w-60 h-20">
                                                                        <%= userList[i].accountStatus %>

                                                                            <% } %>
                                                                    </span>
                                                </td>
                                                </td>
                                                <td>
                                                    <%=userList[i].accountCreated%>
                                                </td>
                                                <td class="text-end">

                                                    <button
                                                        onclick="hideAndUnhide(`<%= userList[i]._id %>`,`<%= userList[i].accountStatus %>`)"
                                                        class="btn btn-sm btn-brand rounded font-sm mt-15"
                                                        style="width: 6rem;height: 2rem;">
                                                        <% if (userList[i].accountStatus==='ACTIVE' ) { %>
                                                            BLOCK
                                                            <% }else{ %>
                                                                UNBLOCK
                                                                <% } %>
                                                    </button>
                                                    <br>
                                                </td>

                                            </tr>
                                            <% } } %>

                                    </tbody>
                                </table>
                                <!-- table-responsive.// -->
                            </div>
                        </div>
                        <!-- card-body end// -->
                    </div>
                    <!-- card end// -->
                    <div class="pagination-area mt-15 mb-50">
                        <nav aria-label="Page navigation example">
                            <ul class="pagination justify-content-start">
                                <li class="page-item active">
                                    <a class="page-link" href="#">01</a>
