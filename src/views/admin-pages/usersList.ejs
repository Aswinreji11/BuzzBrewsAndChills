                                    </a>
                                </li>
                            </ul>
                        </nav>
                    </div>
                </section>
                <!-- content-main end// -->
                <%- include('./partials/footer/footer.ejs') %>
    </body>
    <script>
        async function hideAndUnhide(id, accountStatus) {
            // console.log(`id is showing ${id} accountStatus is showing ${accountStatus}`);
            await fetch(`/admin/user-manage/${id}?accountStatus=${accountStatus}`, {
                method: 'GET',
                headers: {
                    'Content-Type': 'application/json'
                }
            })
                .then((response) => {
                    if (response !== 200) {
                        console.log('some network error happened');
                    }
                    return response.json()
                }).then(data => {
                    if (data.id) {
                        window.location.reload()
                        console.log('data successfully fetched');
                    } else {
                        console.log('data fetched was unsuccessfull');
                    }
                })
                .catch((err) => {
                    console.log('some error caught');
                });
        }
    </script>
    </body>

