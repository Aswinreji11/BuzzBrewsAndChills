<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Order Details</title>
    <style>
        a {
            text-decoration: none;
        }

        #address-container {
            margin-top: 20px;
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 5px;
            width: 700px;
        }

        .address-title {
            font-weight: bold;
            margin-bottom: 10px;
        }

        .container-order {
            max-width: 800px;
            margin: 50px auto;
            padding: 20px;
            background-color: #fff1f1;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        /* h1 {
            text-align: center;
            color: #333;
        } */

        .order-details {
            margin-top: 20px;
        }

        .order-details h2 {
            color: #666;
        }

        .order-item {
            border-bottom: 1px solid #ddd;
            padding: 10px 0;
            position: relative;
            /* Added */
        }

        .order-item:last-child {
            border-bottom: none;
        }

        .order-item .product-name {
            font-weight: bold;
        }

        .order-item .product-price {
            color: #888;
            margin-left: 10px;
        }

        .cancel-btn {
            position: absolute;
            top: 10px;
            right: 10px;
            background-color: #e74c3c;
            color: #fff;
            border: none;
            padding: 5px 10px;
            border-radius: 4px;
            cursor: pointer;
        }

        .cancel-btn:hover {
            background-color: #c0392b;
        }

        .total {
            margin-top: 20px;
            text-align: right;
        }

        .total h2 {
            color: #333;
        }

        .payment-method {
            margin-top: 20px;
        }

        .payment-method h2 {
            color: #666;
        }

        .btn-container-order {
            text-align: center;
            margin-top: 20px;
        }

        .btn-container-order button {
            padding: 10px 20px;
            margin: 0 10px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
        }

        .btn-shop {
            background-color: #474f57;
            color: #fff;
            font-weight: bolder;
        }

        .btn-history {
            background-color: #75d69e;
            color: #fff;
            font-weight: bolder;
        }
    </style>
</head>

<%- include ('./partials/head/head.ejs' ) %>

    <body>
        <%- include('./partials/header/header.ejs') %>
            <!-- breadcrumb-section -->
            <div class="breadcrumb-section breadcrumb-bg">
                <div class="container">
                    <div class="row">
                        <div class="col-lg-8 offset-lg-2 text-center">
                            <div class="breadcrumb-text">
                                <p>Fresh and Organic</p>
                                <h1>Cart</h1>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- end breadcrumb section -->
            <% console.log(order,'order is shwoing'); %>
                    <div class="container-order">
                        <h1>Order Details</h1>
                        <% if (order) { %>
                        
                        <div class="order-details">
                            <h4>Order ID: <%= order[0].orderId %>
                            </h4>
                            <h4>Date: 2024-05-08</h4>
                            <% order[0].products.forEach(item => { %>
                             
                            <div class="order-item">
                                <span class="product-name">
                                    <h5>Product name : <%= item.name %>
                                        <br>
                                
                              Price Rs  <%= item.price %> </h5></span>
                            </div>
                            <% }) %>

                            <div id="address-container">
                                <div class="address-title"><h4><Address>Delivery Address : <%= order[0].address %> </Address></h4></div>
                            </div>
                        </div>
                        <div class="payment-method">
                            <h5>Payment Method: <%= order[0].paymentMethod %> </h5>
                        </div>
                        <div class="total">
                            <h4>Total: Rs <%= order[0].totalPrice %> </h4>
                        </div>
                        <div class="btn-container-order">
                            <button class="btn-shop"><a href="/shop">Return to Shop</a></button>
                            <button class="btn-history"><a href="/order">Order History</a></button>
                        </div>
                        <% }else{ %>
                            <h5>No order yet placed</h5>
                            <% } %> 
                    </div>
    </body>
    <%- include('./partials/footer/footer.ejs') %>


</html>