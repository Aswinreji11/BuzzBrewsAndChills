<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Order Details</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f9f9f9;
            color: #333;
            margin: 0;
            padding: 0;
        }

        .container-order {
            max-width: 800px;
            margin: 50px auto;
            padding: 20px;
            background-color: #fff;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        h1,
        h2,
        h4,
        h5 {
            color: #333;
            margin-bottom: 10px;
        }

        .order-details,
        .payment-method,
        .total,
        .address-container {
            margin-top: 20px;
        }

        table {
            width: 100%;
            margin-top: 20px;
            border-collapse: collapse;
        }

        th,
        td {
            padding: 10px;
            border: 1px solid #ddd;
            text-align: left;
        }

        th {
            background-color: #f2f2f2;
        }

        .product-name {
            width: 60%;
            font-weight: bold;
        }

        .product-price {
            width: 20%;
            text-align: center;
            color: #252525;
            font-weight: bold;
        }

        .product-quantity {
            width: 20%;
            text-align: center;
            color: #1a1818;
            font-weight: bolder;
        }

        .btn-container-order {
            text-align: center;
            margin-top: 20px;
        }

        .btn-container-order button {
            padding: 10px 20px;
            margin: 0 10px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            font-size: 16px;
        }

        .btn-shop {
            background-color: #474f57;
            color: #fff;
            font-weight: bold;
        }

        .btn-history {
            background-color: #75d69e;
            color: #fff;
            font-weight: bold;
        }

        a {
            color: inherit;
            text-decoration: none;
        }

        #address-container {
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 5px;
        }

        .address-title {
            font-weight: bold;
        }
    </style>
</head>

<%- include ('partials/head/head.ejs' ) %>

    <body>
        <%- include('./partials/header/header.ejs') %>
            <!-- breadcrumb-section -->
            <div class="breadcrumb-section breadcrumb-bg">
                <div class="container">
                    <div class="row">
                        <div class="col-lg-8 offset-lg-2 text-center">
                            <div class="breadcrumb-text">
                                <p>Fresh and Organic</p>
                                <h1>Order Details</h1>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- end breadcrumb section -->

            <div class="container-order">
                <h3>Order Details</h3>
                <% if (order) { %>
                    <div class="order-details">
                        <h4>Order ID: <%= order[0].orderId %>
                        </h4>
                        <h4>Date: <%=(order[0].orderDate) %>
                        </h4>
                        <table>
                            <thead>
                                <tr>
                                    <th>Product Name</th>
                                    <th>Price</th>
                                    <th>Quantity</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% order[0].products.forEach(item=> { %>
                                    <tr class="order-item">
                                        <td class="product-name">
                                            <%= item.name %>
                                        </td>
                                        <td class="product-price">Rs <%= item.price %>
                                        </td>
                                        <td class="product-quantity">
                                            <%= item.quantity %>
                                        </td>
                                    </tr>
                                    <% }) %>
                            </tbody>
                        </table>

                        <div id="address-container">
                            <div class="address-title">
                                <h4>Delivery Address: <%= order[0].address %>
                                </h4>
                            </div>
                        </div>
                    </div>
                    <div class="payment-method">
                        <h5>Payment Method: <%= order[0].paymentMethod %>
                        </h5>
                    </div>
                    <div class="total">
                        <h4>Total: Rs <%= order[0].totalPrice %>
                        </h4>
                    </div>
                    <div class="btn-container-order">
                        <button class="btn-shop"><a href="/shop">Return to Shop</a></button>
                        <button class="btn-history"><a href="/order-history">Order History</a></button>
                    </div>
                    <% } else { %>
                        <h5>No order yet placed</h5>
                        <% } %>
            </div>

            <%- include('./partials/footer/footer.ejs') %>
    </body>

</html>