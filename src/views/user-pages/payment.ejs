<%- include ('partials/head/head.ejs' ) %>

    <body>

        <%- include('partials/header/header.ejs') %>

            <!-- breadcrumb-section -->
            <div class="breadcrumb-section breadcrumb-bg">
                <div class="container">
                    <div class="row">
                        <div class="col-lg-8 offset-lg-2 text-center">
                            <div class="breadcrumb-text">
                                <p>See more Details</p>
                                <h1>Single Product</h1>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- end breadcrumb section -->
            <div class="container-payment">
                <h3>Select Payment Method</h3>

                <h4>Cash on delevery</h4>
                <!-- <form action="/order-add" method="post"> -->

                < <div>
                    <h4>Razorpay</h4>
                    <input type="text" name="" hidden value="<%= amount %>" id="amount">
                    <button onclick="placeOrder('razorpay')">Pay with Razorpay</button>
            </div>

            <!-- Cash on Delivery (COD) Payment Method -->
            <div>
                <h4>Cash on Delivery</h4>
                <button onclick="placeOrder('cod')">Pay with Cash on Delivery</button>
            </div>
            <!-- </form> -->

            </div>
    </body>
    <%- include('partials/footer/footer.ejs') %>
        <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
        <script>
            async function placeOrder(paymentMethod) {
                if (paymentMethod === 'razorpay') {
                    // Redirect to Razorpay payment page or trigger Razorpay checkout
                    const amount = document.getElementById('amount').value 
                    console.log(amount);
                    const response = await fetch(`/razorpay-payment/?amount=${amount}`,{
                        method:'GET',
                        headers:{
                            'Content-Type':'application/json'
                        }
                    })
                    console.log(response);
                    window.location.href = "/razorpay-payment"; // Replace with your Razorpay payment route

                } else if (paymentMethod === 'cod') {
                    // Submit form for Cash on Delivery payment
                  
                    const paymentMethod = 'cash on delivery'
                     orderPlace(paymentMethod)
                     console.log('order func not working');
                }
            }
            async function orderPlace(paymentMethod) {
                console.log(paymentMethod);
                await fetch(`/order-add/?paymentMethod=${paymentMethod}`, {
                    method: 'GET',
                    headers: {
                        'Content-Type': 'application/json'
                    }
                }).then(response => response.ok ? response.json() : console.log('Some network error occured while fetching the data'))
                    .then((data) => {
                        if (data.result === 'success')
                            window.location.href = '/order'
                    }).catch(err => {
                        console.log(err, 'some error occured while fetchind data in payment page');
                    })
            }
        </script>

</html>