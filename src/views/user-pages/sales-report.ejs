<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sales Report</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    <style>
        body {
            font-family: 'Arial', sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f4f4f9;
        }

        .container {
            width: 90%;
            margin: auto;
            overflow: hidden;
        }

        header {
            background: #50b3a2;
            color: #ffffff;
            padding-top: 30px;
            min-height: 70px;
            border-bottom: #2980b9 3px solid;
        }

        header a,
        header h1,
        header p {
            display: inline-block;
            margin: 0;
            padding: 0;
        }

        header a {
            color: #ffffff;
            text-decoration: none;
            font-size: 16px;
            padding: 0 10px;
            margin-top: 10px;
        }

        header a:hover {
            text-decoration: underline;
        }

        .main {
            padding: 20px;
            background: #ffffff;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            margin-top: 20px;
        }

        .summary {
            display: flex;
            justify-content: space-around;
            margin-bottom: 20px;
        }

        .summary div {
            background: #f8f8f8;
            padding: 20px;
            text-align: center;
            border-radius: 5px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        .chart-container {
            margin-bottom: 20px;
            text-align: center;
        }

        .chart-container canvas {
            max-width: 500px;
            /* Adjust this value to change the chart size */
            margin: 0 auto;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 20px;
        }

        table,
        th,
        td {
            border: 1px solid #dddddd;
            text-align: left;
            padding: 8px;
        }

        th {
            background-color: #f2f2f2;
        }

        .footer {
            text-align: center;
            padding: 10px;
            background: #50b3a2;
            color: #ffffff;
            margin-top: 20px;
        }
    </style>
</head>

<body>

    <header>
        <div class="container">
            <h1>Company Logo</h1>
            <p>Sales Report: [Date Range]</p>
        </div>
    </header>

    <div class="container main">
        <div class="summary">
            <div>
                <h3>Total Sales</h3>
                <p>$XX,XXX</p>
            </div>
            <div>
                <h3>Number of Transactions</h3>
                <p>XXX</p>
            </div>
            <div>
                <h3>Average Sale Value</h3>
                <p>$XXX</p>
            </div>
            <div>
                <h3>Top-Selling Products</h3>
                <p>Product A, Product B, Product C</p>
            </div>
        </div>

        <div class="chart-container">
            <h3>Sales Over Time</h3>
            <canvas id="salesOverTimeChart"></canvas>
        </div>

        <div class="chart-container">
            <h3>Sales by Category</h3>
            <canvas id="salesByCategoryChart"></canvas>
        </div>

        <div class="chart-container">
            <h3>Detailed Sales Data</h3>
            <table>
                <thead>
                    <tr>
                        <th>Date</th>
                        <th>Product/Service</th>
                        <th>Category</th>
                        <th>Quantity Sold</th>
                        <th>Sale Amount</th>
                    </tr>
                </thead>
                <tbody>
                    <!-- Repeat for each sale -->
                    <tr>
                        <td>[Date]</td>
                        <td>[Product/Service]</td>
                        <td>[Category]</td>
                        <td>[Quantity]</td>
                        <td>$[Amount]</td>
                    </tr>
                </tbody>
            </table>
        </div>

        <div class="chart-container">
            <h3>Top Customers</h3>
            <table>
                <thead>
                    <tr>
                        <th>Customer Name</th>
                        <th>Total Purchase Amount</th>
                        <th>Number of Purchases</th>
                    </tr>
                </thead>
                <tbody>
                    <!-- Repeat for each top customer -->
                    <tr>
                        <td>[Customer Name]</td>
                        <td>$[Total Purchase]</td>
                        <td>[Number of Purchases]</td>
                    </tr>
                </tbody>
            </table>
        </div>

        <div class="chart-container">
            <h3>Regional Sales</h3>
            <canvas id="regionalSalesChart"></canvas>
        </div>

        <div class="chart-container">
            <h3>Insights and Recommendations</h3>
            <p>[Key Insights and Recommendations]</p>
        </div>
    </div>

    <div class="footer">
        <p>Prepared By: [Name]</p>
        <p>Date of Report: [Date]</p>
        <p>Contact Information: [Email/Phone]</p>
    </div>

    <!-- Include Chart.js from CDN -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        // Example data for the charts
        const salesOverTimeData = {
            labels: ['January', 'February', 'March', 'April', 'May', 'June'],
            datasets: [{
                label: 'Sales Over Time',
                data: [1200, 1500, 1700, 1400, 1900, 2300],
                borderColor: 'rgba(75, 192, 192, 1)',
                backgroundColor: 'rgba(75, 192, 192, 0.2)',
                fill: true,
                tension: 0.1
            }]
        };

        const salesByCategoryData = {
            labels: ['Category A', 'Category B', 'Category C'],
            datasets: [{
                label: 'Sales by Category',
                data: [5000, 3000, 2000],
                backgroundColor: ['#FF6384', '#36A2EB', '#FFCE56']
            }]
        };

        const regionalSalesData = {
            labels: ['Region 1', 'Region 2', 'Region 3', 'Region 4'],
            datasets: [{
                label: 'Regional Sales',
                data: [2000, 3000, 1000, 4000],
                backgroundColor: ['#FF6384', '#36A2EB', '#FFCE56', '#4BC0C0']
            }]
        };

        // Rendering the charts
        const salesOverTimeCtx = document.getElementById('salesOverTimeChart').getContext('2d');
        const salesByCategoryCtx = document.getElementById('salesByCategoryChart').getContext('2d');
        const regionalSalesCtx = document.getElementById('regionalSalesChart').getContext('2d');

        new Chart(salesOverTimeCtx, {
            type: 'line',
            data: salesOverTimeData,
            options: {
                responsive: true,
                plugins: {
                    legend: {
                        position: 'top',
                    },
                },
                scales: {
                    y: {
                        beginAtZero: true
                    }
                }
            }
        });

        new Chart(salesByCategoryCtx, {
            type: 'pie',
            data: salesByCategoryData,
            options: {
                responsive: true,
                plugins: {
                    legend: {
                        position: 'top',
                    },
                }
            }
        });

        new Chart(regionalSalesCtx, {
            type: 'bar',
            data: regionalSalesData,
            options: {
                responsive: true,
                plugins: {
                    legend: {
                        position: 'top',
                    },
                },
                scales: {
                    y: {
                        beginAtZero: true
                    }
                }
            }
        });
    </script>
</body>

</html>